    <script type="text/javascript" src="/scripts/new-quiz.js"></script>
  </head>
  <body>
    <%- include('partials/_header') %>

    <main id="main-create">
      <form action="/new-quiz" method="POST">
        <label for="title">Title: </label>
        <input type="text" id="title" name="title" required /><br />

        <label for="category">Category: </label>
        <select id="category" name="category">
          <option value="Math">Math</option>
          <option value="English">English</option>
          <option value="Science">Science</option>
          <option value="History">History</option>
          <option value="Other">Other</option></select
        ><br />

        <label for="image_url">Image URL: </label>
        <input type="url" id="image_url" name="image_url" /><br />

        <input type="checkbox" id="isPublic" name="public" value="True" />
        <label for="isPublic">View by everyone</label><br />

        <input type="checkbox" id="isPublic" name="public" value="True" />
        <label for="isPublic">View by everyone</label><br />

        <div id="question-container"></div>
        <button type="submit" class="btn" id="send-q">Done</button>
      </form>
      <form action="javascript:void(0);" id="Add-more" method="POST">
        <button type="submit" class="btn">Add More Question</button>
      </form>
    </main>
  </body>
</html>
