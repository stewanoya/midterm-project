<!DOCTYPE html>
<html lang="en">
  <head>
    <title>sQuiz Game</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="/styles/my-quizzes.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <script
      src="https://use.fontawesome.com/releases/v5.15.4/js/all.js"
      data-auto-a11y="true"
    ></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;900&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <%- include('partials/_header') %>
    <div class="spacer"></div>
    <h2 class="slogan">My sQuizzes</h2>
    <div class="flex-container">
      <section class="my-squizzes-container">
        <h3 class="public-title">Public sQuizzes</h3>
        <ul class="public-grid">
          <% for (quiz of quizzes) { %> <% if (quiz.ispublic == true) { %>
          <div class="details-container">
            <a href="/quizzes/<%=quiz.short_url%>" method="GET">
              <li
                class="quiz-card"
                style="
                  background-image: url('<%=quiz.cover_image_url%>');
                  background-size: cover;
                  background-position: center;
                  background-repeat: no-repeat;
                "
              >
                <div class="quiz-category"><%=quiz.category%></div>
                <div class="quiz-title-container">
                  <h3 class="quiz-title"><%=quiz.title%></h3>
                </div>
              </li>
              <%const date = quiz.created_at.toString()%>
            </a>
            <p class="date">
              Created on <strong><%=date.slice(0, 16)%></strong>
            </p>
            <div class="options-container">
              <form method="GET" action="/edit/<%=quiz.id%>" class="d-inline">
                <button class="edit">Edit</button>
              </form>
              <form
                method="POST"
                action="/delete/<%=quiz.id%>"
                class="d-inline"
              >
                <button class="delete">Delete</button>
              </form>
            </div>
          </div>
          <% } %> <%}%>
        </ul>
        <div class="divider"></div>
        <h3 class="private-title">Private sQuizzes</h3>
        <ul class="private-grid">
          <% for (quiz of quizzes) { %> <% if (quiz.ispublic != true) { %>
          <div class="details-container">
            <a href="/quizzes/<%=quiz.short_url%>" method="POST">
              <li
                class="quiz-card"
                style="
                  background-image: url('<%=quiz.cover_image_url%>');
                  background-size: cover;
                  background-position: center;
                  background-repeat: no-repeat;
                "
              >
                <div class="quiz-category"><%=quiz.category%></div>
                <div class="quiz-title-container">
                  <h3 class="quiz-title"><%=quiz.title%></h3>
                </div>
              </li>
              <%const date = quiz.created_at.toString()%>
            </a>
            <p class="date">
              Created on <strong><%=date.slice(0, 16)%></strong>
            </p>
            <div class="options-container">
              <form method="GET" action="/edit/<%=quiz.id%>" class="d-inline">
                <button class="edit">Edit</button>
              </form>
              <form
                method="POST"
                action="/delete/<%=quiz.id%>"
                class="d-inline"
              >
                <button class="delete">Delete</button>
              </form>
            </div>
          </div>
          <% } %> <% } %>
        </ul>
      </section>
    </div>
  </body>
</html>
